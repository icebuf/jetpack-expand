<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="com.icebuf.jetpackex.sample.fragment.NewsViewModel" />
        <variable
            name="client"
            type="com.icebuf.jetpackex.DefaultWebViewClient" />
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <WebView
            android:id="@+id/wv_news"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:webViewClient="@{client}"
            app:settings="@{(view, settings)->client.onSetting(settings)}"
            app:loadUrl="@{vm.newsUrl}"/>

    </FrameLayout>

</layout>